//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "UpdaterThread.h"
#pragma package(smart_init)

#include "update.h"


//---------------------------------------------------------------------------

//   Important: Methods and properties of objects in VCL can only be
//   used in a method called using Synchronize, for example:
//
//      Synchronize(&UpdateCaption);
//
//   where UpdateCaption could look like:
//
//      void __fastcall TUpdater::UpdateCaption()
//      {
//        Form1->Caption = "Updated in a thread";
//      }
//---------------------------------------------------------------------------

__fastcall TUpdater::TUpdater(bool CreateSuspended)
	: TThread(CreateSuspended)
{
	randomize();
}
//---------------------------------------------------------------------------
void __fastcall TUpdater::Execute()
{
	update();
	Sleep(5000);
	for (;;)
	{
        exitApp = true;
		if ((exitApp) == (true))
		{
			for (int i = 0; i < IGEST_API::IGEstObjCount; i++) {
				IGEstBase* obj = IGEST_API::IGEstBaseObj[i];;
				delete obj;
			}
			Application->Terminate();
			break;
		}
		if (Terminated) break;
	};
}
//---------------------------------------------------------------------------
